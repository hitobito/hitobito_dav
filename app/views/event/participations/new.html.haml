- title t('event.participations.form.title_new', role: entry.roles.first.class.model_name.human)

- if @event.course? && !params[:for_someone_else]
  = render 'course_signup', step: @step do
    = render 'wizard_form'

- else
  - unless params[:for_someone_else]
    = render 'step_wizard', step: 2

  = render 'form', submit_label: t('event.participations.form.apply')
