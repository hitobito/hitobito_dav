- if @role.type.present? && SacCas::WIZARD_MANAGED_ROLES.include?(@role.type.constantize)
  = render 'roles/label', f:
  = field_set_tag Role.human_attribute_name(:dates) do
    = f.labeled(:end_on) do
      = f.date_field(:end_on, disabled: !can?(:destroy, @role), class: 'date col-6', value: f(@role.end_on))
  = render_extensions :fields, locals: {f:}
- else
  = render_core_partial "roles/fields", f: f
